<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/rankTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_gray_background"
            android:minWidth="10dp"
            android:textSize="16sp"
            tools:ignore="TextContrastCheck"
            tools:text="1" />

        <ImageView
            android:id="@+id/coinImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_gray_background"
            android:contentDescription="@string/image_coins"
            tools:ignore="ImageContrastCheck"
            tools:srcCompat="@drawable/ic_bitcoin" />

        <TextView
            android:id="@+id/symbolTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_gray_background"
            android:minWidth="60dp"
            android:textSize="14sp"
            tools:ignore="TextContrastCheck"
            tools:text="BTC" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/priceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/rounded_gray_background"
                android:gravity="center|end"
                android:minWidth="80dp"
                android:textSize="16sp"
                tools:ignore="TextContrastCheck"
                tools:text="$41,821.82" />

            <TextView
                android:id="@+id/change7dTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/rounded_gray_background"
                android:gravity="center|end"
                android:minWidth="50dp"
                android:textSize="14sp"
                tools:ignore="TextContrastCheck"
                tools:text="+0.2%" />

        </LinearLayout>

        <ImageView
            android:id="@+id/chartView"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="8dp"
            android:contentDescription="@string/chart_desc"
            android:src="@drawable/rounded_gray_background"
            tools:ignore="ImageContrastCheck" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>